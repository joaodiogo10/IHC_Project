<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        android:name=".App"
        >
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.App.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.App.NoActionBar" />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="Profile"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddActivityActivity"
            android:label="Add Activity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddSymptomCheckActivity"
            android:label="Add Symptom Check"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddMeasurementActivity"
            android:label="Add Measurement"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddMedicationActivity"
            android:label="Add Medication"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTop"></activity>
    </application>

</manifest>